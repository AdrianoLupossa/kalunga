html {
	overflow-x: hidden;
}

.nota-falecimento-titulo {
	font-size: 2.3em; 
	font-weight: bolder; 
	color: #393939;
}

.campas {
	
	display: flex; 
	justify-content: space-around;
	margin-bottom: 5rem;
	
	@media (max-width: 1055px) { /* 992px - Overflow-x: hidden*/
		flex-wrap: wrap;
	}
	
	.nota-falecimento {
		max-width: 314px; 
		text-align: justify; 
		margin-left: 2.5rem !important;
	}
	
	& figure {
		display: inline-table;
		padding: 0 !important;
		margin: 0 !important;
	}
	
	& .campa {
		width: 100%;
		height: 300px;
		position: relative;
		text-align: center;
		& .name {
			position: absolute;
			bottom: 3.4rem;
			left: 11.3rem;
			color: #fff;
			font-weight: bolder;
			@media (min-width: 992px) {
				bottom: 3.2rem;
				left: 10.4rem;
			}
		}
	}
}