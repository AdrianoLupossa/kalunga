html {
	overflow-x: hidden;
}

.nota-falecimento-titulo {
	font-size: 2em; 
	font-weight: bolder; 
	color: #393939;
}
.align-center{
	 text-align: center;
}

.campas {
	

	text-align:center;
	margin-bottom: 2rem;
	
	.nota-falecimento {
		width: 300px; 
		text-align: justify;
	}
	
	& figure {
		display: inline-table;
		padding: 0 !important;
		margin: 0 0 5rem 0;
		
	}
	
	& .campa {

		& img{

			position: absolute; 
			left: 90px; 
			top: 52px; 
			-webkit-filter: grayscale(100%); 
			filter: grayscale(100%); 
			border-radius: 100%;
			width:120px;
			
		}
		
		height: 240px;
		position: relative;
		background: url('../../src/img/campa-resized.png') no-repeat;
		background-position: center;
		& .name-container {
			position: absolute;
			bottom: 1.55rem;
			left: 2.5rem;
			text-align: center;
			width: 75%;
			@media (max-width: 568px) {
				bottom: 1.65rem;
			}
			
			& .name {
				color: #fff;
				font-weight: bolder;
			}
			
		}
	}
}

.card-title{
	font-weight: bold  !important
}