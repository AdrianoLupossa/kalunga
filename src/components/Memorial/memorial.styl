.box {
	border-radius: 10px;
	background-color: #f2f2f2;
	padding: 1rem;
	-moz-box-shadow:    0px 2px 13px rgba(0,0,0,0.50);
	-webkit-box-shadow: 0px 2px 13px rgba(0,0,0,0.50);
	box-shadow:         0px 2px 13px rgba(0,0,0,0.50);
	font-size: 14px;
	font-family: arial;
}

.kalunga {
	border-radius: 2px !important;
	background-color: #f2f2f2 !important;
	border: 1px solid #cacaca !important;
	box-shadow: 0px 2px 13px #cacaca !important;
}

.memorial {
	background: url("../../src/img/memorial/paul allen resized.png") no-repeat;
	background-size: 100%;
	height: 90vh;
	@media (max-width: 992px) {
		background-size: 100% 70vh;
	}
 	@media (max-width: 568px) {
		background-size: 100% 50vh;
		height: 50vh;
	}
}

.title {
	margin: 0 0 1rem 0;
	padding: 0;
	color: #444;
	font-size: inherit;
	font-family: inherit;
	font-weight: bold;
}

button {
	@extend .kalunga;
}

.memorial-content {
	
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	padding: 0 3rem 0 3rem;
	
	.bio {
		@extend .box;
		width: 467px;
		height: 293px;
		display: flex;
		flex-direction: column;

		& p {
			height: 293px;
			text-align: justify;
			overflow-y: hidden; 
			text-overflow: ellipsis;
		}
		
		.expand-bio {
			align-self: flex-end;
		}
	}
	
	.events {
		display: flex;
		flex-direction: column;
		font-family: arial;
		font-size: 14px;
		
		.funeral-date li {
			display: flex;
			flex-direction: column;
			&:not(:last-child) {
				margin-bottom: 1.5rem;
			}
		}
		
		.btn-funeral-action {
			width: 118px;
			height: 39px;
			color: #444;
			font-size: inherit;
			margin-top: 1rem;
			cursor: pointer;
		}
		
	}
	
}